<div id='header'></div>

<div class='row'>
  <div class='col-md-10 col-md-offset-1'>
    <div id='details' class='form-horizontal'></div>
  </div>
</div>

<script type='text/template' id='tmpl-header'>
  <div>
    <h2>
      <a href='/admin/accounts/'>Events</a> / \{{event.name}}
    </h2>
  </div>
</script>

<script type='text/template' id='tmpl-details'>
  <div class='alerts'>
    \{{#each errors}}
      <div class='alert alert-error'>\{{this}}</div>
    \{{/each}}
    \{{#if success}}
      <div class='alert alert-info'>
        <button type='button' data-dismiss='alert' class='close'>&times;</button>Changes have been saved.
      </div>
    \{{/if}}
  </div>

  <ul class='nav nav-tabs'>
    \{{#each event.properties}}
      <li>
        <a href='#\{{@key}}' data-toggle='tab'>\{{@key}}</a>
      </li>
    \{{/each}}
  </ul>

  <div class='tab-content'>
    \{{#each event.properties}}
      <div class="tab-pane" id="\{{@key}}">
        <pre rows='4' style='width:100%' name='\{{@key}}'></pre>
      </div>
    \{{/each}}
  </div>

  <div class='form-actions no-padding'>
    <button type='button' class='btn btn-edit'>Edit</button>
    <button type='button' class='btn btn-primary btn-update'>Update</button>
  </div>
</script>

<script type='text/template' id='data-record'>
  {{{data.record}}}
</script>